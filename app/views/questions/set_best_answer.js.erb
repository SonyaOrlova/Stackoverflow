var mainEl = document.querySelector('.main');
var notificationEl = mainEl.querySelector('.notification');

if (notificationEl) mainEl.removeChild(notificationEl);

<% unless @question.errors.present? %>
  mainEl.insertAdjacentHTML('afterbegin', '<%= render "shared/success", content: "Question best answer was successfully updated" %>');

  var answersEl = mainEl.querySelector('.answers');

  answersEl.innerHTML = '<%= j render @question.answers.sort_by_best %>';
<% else %>
  mainEl.insertAdjacentHTML('afterbegin', '<%= render "shared/errors", resource: @question %>');
<% end %>
